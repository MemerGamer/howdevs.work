---
import ContentPanel from '@astrojs/starlight/components/ContentPanel.astro';
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro';
import { blogLanguages } from '../data/blogLanguages.ts';
---

<StarlightPage
  frontmatter={{
    title: 'howdevs.work',
    description: 'Real stories from developers building products, leading teams, and figuring it out as we go.',
    date: new Date('2025-11-11'),
  }}
>
  <ContentPanel>
    <h1>Real developer stories, no BS.</h1>
    <p>
      We're developers who write about the stuff nobody else talks about: the 3am debugging sessions, 
      the architecture decisions that seemed brilliant until they weren't, and the human side of building software.
    </p>
    <p>
      No marketing fluff, no "10 ways to revolutionize your workflow" clickbait. Just honest stories 
      from people who've been there, done that, and learned something worth sharing.
    </p>
  </ContentPanel>

  <ContentPanel>
    <div class="language-cards">
      {blogLanguages.map((lang) => (
        <article>
          <header>
            <span class="badge">{lang.label}</span>
            <h2>{lang.title}</h2>
          </header>
          <p>{lang.description}</p>
          <a class="cta" href={lang.href}>
            {lang.cta} â†’
          </a>
        </article>
      ))}
    </div>
  </ContentPanel>
</StarlightPage>

<style>
  .language-cards {
    display: grid;
    gap: 1.5rem;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  }

  .language-cards article {
    padding: 1.75rem;
    border-radius: 1rem;
    border: 1px solid var(--sl-color-hairline);
    background: var(--sl-color-surface-2);
    display: grid;
    gap: 1rem;
    min-height: 220px;
  }

  .language-cards h2 {
    margin: 0;
  }

  .language-cards p {
    margin: 0;
    color: var(--sl-color-text-muted);
  }

  .language-cards .cta {
    align-self: end;
    display: inline-flex;
    gap: 0.5rem;
    text-decoration: none;
    font-weight: 600;
    color: var(--sl-color-accent);
  }

  .language-cards .cta:hover,
  .language-cards .cta:focus {
    text-decoration: underline;
  }

  .badge {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    padding: 0.25rem 0.7rem;
    border-radius: 999px;
    background: var(--sl-color-surface-3);
    color: var(--sl-color-text-muted);
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }
</style>